<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/single_fragment_frameMargin"
    tools:context="edu.mines.csci448.suspensionguru.MainFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/simulation"
        android:contentDescription="@string/fragment_dimension_imageDescription"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:labelFor="@+id/fragment_simulation_antiSquatText"
            android:text="@string/fragment_simulation_antiSquatLabel"
            style="?android:listSeparatorTextViewStyle"/>

        <EditText
            android:id="@+id/fragment_simulation_antiSquatText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_weight="1"
            style=""/>

        <ImageButton
            android:id="@+id/fragment_simulation_antiSquatHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_help"
            android:contentDescription="@string/fragment_simulation_imageDescription"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:labelFor="@+id/fragment_simulation_rollCenterText"
            android:text="@string/fragment_simulation_rollCenterLabel"
            style="?android:listSeparatorTextViewStyle"/>

        <EditText
            android:id="@+id/fragment_simulation_rollCenterText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_weight="1"
            style=""/>

        <ImageButton
            android:id="@+id/fragment_simulation_rollCenterHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_help"
            android:contentDescription="@string/fragment_simulation_imageDescription"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:labelFor="@+id/fragment_simulation_rollAxisText"
            android:text="@string/fragment_simulation_rollAxisLabel"
            style="?android:listSeparatorTextViewStyle"/>

        <EditText
            android:id="@+id/fragment_simulation_rollAxisText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_weight="1"
            style=""/>

        <ImageButton
            android:id="@+id/fragment_simulation_rollAxisHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_help"
            android:contentDescription="@string/fragment_simulation_imageDescription"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:labelFor="@+id/fragment_simulation_otherCalcText"
            android:text="@string/fragment_simulation_otherCalcLabel"
            style="?android:listSeparatorTextViewStyle"/>

        <EditText
            android:id="@+id/fragment_simulation_otherCalcText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_weight="1"
            style=""/>

        <ImageButton
            android:id="@+id/fragment_simulation_otherCalcHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_help"
            android:contentDescription="@string/fragment_simulation_imageDescription"/>
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/fragment_simulation_refreshButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_simulation_refreshButtonLabel"/>
</LinearLayout>
